@model Domain.Concrete.CreateModel

@{
    ViewBag.Title = "Создание пользователя";
}

@Html.ValidationSummary(false)
@using (Html.BeginForm())
{
    <div class="form-group">
        <label>Имя</label>
        @Html.TextBoxFor(x => x.Name, new { @class = "form-control" })
    </div>
    <div class="form-group">
        <label>Email</label>
        @Html.TextBoxFor(x => x.Email, new { @class = "form-control" })
    </div>

    <div class="form-group">
        <label>Пароль</label>
        @Html.PasswordFor(x => x.Password, new { @class = "form-control" })
    </div>
    @*<button type="submit" class="btn btn-primary">Create</button>*@
    <input class="btn btn-primary" type='submit' value='Create' onclick='window.location = "@Url.Action("Login","Account") ";' />

    <input class= "btn btn-primary" type='button' value='Cancel' onclick='window.location = "@Url.Action("Login","Account") ";' />
}